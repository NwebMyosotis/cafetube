extends ../base
block content 
    div(class="side-space")
            div(class="area__upload")
                div(class="area__upload-title")
                    h1 비디오 수정
                div(class="area__video-form")
                    div(class="video-preview")
                    form(method="POST" class="form__video-edit")
                        label(for="thumb") 썸네일 파일 업로드
                        input(type="file" id="thumb" name="thumb" required accept="image/*") 
                        input(type="text" placeholder="제목" required id="title" name="title" value=video.title)
                        input(type="text" placeholder="설명" required id="description" name="description" value=video.description)
                        input(type="text" placeholder="해시태그" id="hashtags" name="hashtags" value=video.hashtags.join(' '))
                        input(type="submit" value="수정")